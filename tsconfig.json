{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "lib": ["es2015", "dom"],
    "noEmitHelpers": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}